{
  "name": "ai-conflict-dashboard-desktop",
  "version": "0.1.0",
  "description": "AI Conflict Dashboard - Desktop Application",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test -c playwright-ct.config.ts",
    "test:e2e:ui": "playwright test -c playwright-ct.config.ts --ui",
    "test:e2e:debug": "playwright test -c playwright-ct.config.ts --debug",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,md}'",
    "start": "concurrently \"npm run dev\" \"npm run api:dev\"",
    "api:dev": "cd backend && python3 -m uvicorn desktop_main:app --reload --port 8000",
    "api:start": "cd backend && python3 desktop_main.py"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.3",
    "@types/dompurify": "^3.0.5",
    "axios": "^1.6.7",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "dompurify": "^3.2.6",
    "lucide-react": "^0.536.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-flow-renderer": "^10.3.17",
    "react-hot-toast": "^2.4.1",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.22.0",
    "reactflow": "^11.11.4",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.54.2",
    "@playwright/test": "^1.54.2",
    "@tauri-apps/cli": "^1.5.9",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.17",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
