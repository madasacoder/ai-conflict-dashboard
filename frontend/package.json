{
  "name": "ai-conflict-dashboard-frontend",
  "version": "1.0.0",
  "description": "Frontend for AI Conflict Dashboard",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint *.js",
    "serve": "python3 -m http.server 8080"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.55.0",
    "happy-dom": "^12.10.3",
    "msw": "^2.0.0",
    "vitest": "^1.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    },
    "globals": {
      "bootstrap": "readonly",
      "Prism": "readonly"
    }
  }
}